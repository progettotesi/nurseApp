<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="russodiego.nurseapp.PatientActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/header"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:visibility="visible"
        tools:layout_editor_absoluteY="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


        <ImageView
            android:id="@+id/img_logo_umberto"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:background="@android:color/background_light"
            android:contentDescription="@string/myapp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_umberto"
            tools:ignore="RtlHardcoded"
            tools:layout_gravity="right" />

        <ImageView
            android:id="@+id/img_logo_sapienza"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:background="@android:color/background_light"
            android:contentDescription="logo_sapienza"
            android:scaleType="centerInside"
            android:src="@drawable/logo_sapienza"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/background_light"
            android:clickable="false"
            android:elevation="0dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_gravity="center_horizontal" />

    </android.support.design.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/txt_patient_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="Patient Profile"
        android:textAllCaps="true"
        android:textColor="000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/img_profile"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:background="@android:color/background_light"
        android:contentDescription=""
        android:elevation="2dp"
        android:src="@drawable/profile"
        app:srcCompat="@drawable/profile"
        tools:clickable="?android:attr/windowOverscan"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="277dp" />

    <ImageButton
        android:id="@+id/img_samples"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:background="@android:color/background_light"
        android:elevation="2dp"
        app:srcCompat="@drawable/samples"
        tools:clickable="?android:attr/windowOverscan"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="277dp" />

    <ImageButton
        android:id="@+id/img_folders"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:background="@android:color/background_light"
        android:elevation="2dp"
        app:srcCompat="@drawable/folders"
        tools:clickable="?android:attr/windowOverscan"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="512dp" />

    <ImageButton
        android:id="@+id/img_drugs"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:background="@android:color/background_light"
        android:contentDescription=""
        android:elevation="2dp"
        app:srcCompat="@drawable/drugs"
        tools:clickable="?android:attr/windowOverscan"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="512dp" />
